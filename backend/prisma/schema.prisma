// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  GUEST
  RENTER
  LANDLORD
  MODERATOR
  ADMIN
  MARKETER
}

enum ReviewStatus {
  PENDING
  APPROVED
  REJECTED
}

enum RatingCriterion {
  TECHNICAL_CONDITION    // Техническое состояние и ремонт
  CLEANLINESS            // Чистота и гигиена
  SAFETY                 // Безопасность района и дома
  COMFORT                // Комфорт проживания (шум, соседи)
  LANDLORD_HONESTY       // Честность и адекватность арендодателя
  PRICE_QUALITY          // Соотношение цены и качества
}

model User {
  id            String    @id @default(uuid())
  email         String?   @unique
  name          String
  avatar        String?
  passwordHash  String?
  dateOfBirth   DateTime? // Для проверки 18+
  role          UserRole  @default(RENTER)
  
  // OAuth
  yandexId      String?   @unique
  vkId          String?   @unique
  
  // Блокировка
  isBlocked     Boolean   @default(false)
  
  // Для маркетолога: смена пароля при первом входе
  passwordChangeRequired Boolean @default(false)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  reviews       Review[]
  moderationLogs ModerationLog[]
  reviewResponses ReviewResponse[]
  reviewVotes    ReviewVote[]
  reviewReports  ReviewReport[]
  
  // Связи для арендодателя/арендатора
  landlordApartments  LandlordApartment[]
  landlordSubscription LandlordSubscription?
  linkedAsRenter   User?   @relation("RenterLandlordLink", fields: [linkedLandlordId], references: [id])
  linkedLandlordId String? @unique
  linkedAsLandlord User?   @relation("RenterLandlordLink")
  
  // Маркетолог
  marketerProfile   MarketerProfile?
  
  pendingYookassaPayments PendingYookassaPayment[]
  
  @@index([email])
  @@index([yandexId])
  @@index([vkId])
}

// Квартиры, которые сдаёт арендодатель (landlordId = User.id)
model LandlordApartment {
  id            String   @id @default(uuid())
  landlordId    String
  apartmentId   String
  
  createdAt     DateTime @default(now())
  
  landlord      User     @relation(fields: [landlordId], references: [id], onDelete: Cascade)
  apartment     Apartment @relation(fields: [apartmentId], references: [id], onDelete: Cascade)
  
  @@unique([landlordId, apartmentId])
  @@index([landlordId])
}

// Текущая подписка арендодателя (остаток ответов)
model LandlordSubscription {
  id                String   @id @default(uuid())
  landlordId        String   @unique
  responsesRemaining Int    @default(0)
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  landlord          User     @relation(fields: [landlordId], references: [id], onDelete: Cascade)
  purchases         LandlordSubscriptionPurchase[]
}

// История покупок ответов
model LandlordSubscriptionPurchase {
  id                String   @id @default(uuid())
  subscriptionId    String
  planType          Int      // 1, 3, 5, 10 ответов
  amount            Int      // Сумма в рублях
  responsesGranted  Int
  
  promoCodeId       String?
  marketerId        String?
  
  createdAt         DateTime @default(now())
  
  subscription      LandlordSubscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)
  promoCode         PromoCode?            @relation(fields: [promoCodeId], references: [id])
  marketer          MarketerProfile?      @relation(fields: [marketerId], references: [id])
  
  @@index([subscriptionId])
}

// Ожидающий платёж ЮKassa (для идемпотентной обработки webhook)
model PendingYookassaPayment {
  id                String   @id @default(uuid())
  yookassaPaymentId String   @unique  // id из ЮKassa
  landlordId        String
  planType          Int
  amount            Int      // итоговая сумма после скидки
  subscriptionId    String?  // для докупки; при регистрации подписка уже есть
  promoCodeId       String?
  marketerId        String?
  status            String   @default("PENDING")  // PENDING | COMPLETED | FAILED
  
  createdAt         DateTime @default(now())
  
  landlord          User     @relation(fields: [landlordId], references: [id], onDelete: Cascade)
  
  @@index([yookassaPaymentId])
  @@index([landlordId])
}

// Промокод
model PromoCode {
  id            String   @id @default(uuid())
  code          String   @unique
  marketerId    String?
  discountType  String   // PERCENT | FIXED
  discountValue Int      // Процент или сумма в рублях
  usedCount     Int      @default(0)
  maxUses       Int?     // null = без лимита
  isActive      Boolean  @default(true)
  
  createdAt     DateTime @default(now())
  
  usages        LandlordSubscriptionPurchase[]
  marketer      MarketerProfile? @relation(fields: [marketerId], references: [id])
  
  @@index([code])
  @@index([marketerId])
}

// Профиль маркетолога
model MarketerProfile {
  id                  String    @id @default(uuid())
  userId              String    @unique
  email               String
  percentage          Float     // Процент от продаж
  // Данные для договора (заполняются при акцепте)
  fullName            String?   // ФИО полностью
  inn                 String?   // ИНН
  passport            String?   // Паспорт: серия, номер, кем выдан
  phone               String?   // Телефон
  contractAcceptedAt  DateTime? // Дата и время акцепта договора
  
  createdAt           DateTime  @default(now())
  
  user                User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  promoCodes          PromoCode[]
  purchases           LandlordSubscriptionPurchase[]
  
  @@index([email])
}

model Address {
  id          String     @id @default(uuid())
  country     String
  city        String
  street      String
  building    String
  latitude    Float?
  longitude   Float?
  
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  apartments  Apartment[]
  
  @@unique([country, city, street, building])
  @@index([city, street])
}

model Apartment {
  id          String    @id @default(uuid())
  addressId   String
  number      String    // Номер квартиры/помещения
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  address     Address   @relation(fields: [addressId], references: [id], onDelete: Cascade)
  reviews     Review[]
  landlordApartments LandlordApartment[]
  
  @@unique([addressId, number])
  @@index([addressId])
}

model Review {
  id              String        @id @default(uuid())
  userId          String
  apartmentId     String
  comment         String        @db.VarChar(100)
  averageRating   Float
  
  periodFrom      DateTime
  periodTo        DateTime
  
  status          ReviewStatus  @default(PENDING)
  rejectionReason String?
  
  // Монетизация (для будущего)
  canBeDeleted    Boolean       @default(false)
  deletionRequested Boolean     @default(false)
  
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  publishedAt     DateTime?
  
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  apartment       Apartment     @relation(fields: [apartmentId], references: [id], onDelete: Cascade)
  ratings         Rating[]
  photos          Photo[]
  moderationLogs  ModerationLog[]
  landlordResponse ReviewResponse?
  votes            ReviewVote[]
  reports          ReviewReport[]
  
  @@unique([userId, apartmentId]) // Арендатор — один отзыв на одну квартиру
  @@index([apartmentId])
  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

model ReviewResponse {
  id          String   @id @default(uuid())
  reviewId    String   @unique
  landlordId  String
  text        String
  
  createdAt   DateTime @default(now())
  
  review      Review   @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  landlord    User     @relation(fields: [landlordId], references: [id], onDelete: Cascade)
  
  @@index([reviewId])
  @@index([landlordId])
}

model ReviewVote {
  id        String   @id @default(uuid())
  reviewId  String
  userId    String
  vote      Int      // 1 = LIKE, -1 = DISLIKE
  
  createdAt DateTime @default(now())
  
  review    Review   @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([reviewId, userId])
  @@index([reviewId])
}

model ReviewReport {
  id        String   @id @default(uuid())
  reviewId  String
  userId    String
  reason    String?
  
  createdAt DateTime @default(now())
  
  review    Review   @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([reviewId])
}

model SystemSettings {
  id          String   @id @default(uuid())
  key         String   @unique
  value       String   // JSON или строка
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([key])
}

model Rating {
  id          String          @id @default(uuid())
  reviewId    String
  criterion   RatingCriterion
  score       Int             // 1-5
  
  review      Review          @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  
  @@unique([reviewId, criterion])
  @@index([reviewId])
}

model Photo {
  id          String   @id @default(uuid())
  reviewId    String
  url         String
  fileName    String
  fileSize    Int
  mimeType    String
  
  createdAt   DateTime @default(now())
  
  review      Review   @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  
  @@index([reviewId])
}

model ModerationLog {
  id          String   @id @default(uuid())
  reviewId    String
  moderatorId String
  action      String   // APPROVED, REJECTED
  reason      String?
  
  createdAt   DateTime @default(now())
  
  review      Review   @relation(fields: [reviewId], references: [id], onDelete: Cascade)
  moderator   User     @relation(fields: [moderatorId], references: [id])
  
  @@index([reviewId])
  @@index([moderatorId])
}

